<div class="d-flex justify-content-center align-items-start min-vh-100">

  <div class="col-md-10">

    <div class="w-75 my-5 mx-auto">

      <h1 class="display-5 fw-bold text-primary mb-4">
        <i class="fa-solid fa-building-columns"></i>
        Log in to The Stoic Journal
      </h1>

      <p class="fs-5 lead small text-secondary text-muted">
        Sign in to your account
      </p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        html: {
          class: "bg-body border border-2 border-tertiary rounded-2 shadow p-4 mb-4",
        },
        data: {
          turbo: :false
        }) do |f| %>

        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-end">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>

  </div>
</div>
