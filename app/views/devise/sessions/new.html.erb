<div class="d-flex justify-content-center align-items-start min-vh-100">

  <div class="col-md-10">

    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "animate-shadow bg-body rounded-3 m-5 p-5 w-50 mx-auto", data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex justify-content-end">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
