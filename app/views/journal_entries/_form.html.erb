<%= simple_form_for(journal_entry, html: { class: "animate-shadow bg-body rounded-3 m-5 p-5 w-50 mx-auto" }) do |f| %>

  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">

    <%= f.input :title, input_html: { class: "form-control mb-3" } %>

    <%= f.input :entry, as: :text, input_html: { class: "form-control mb-3", 'rows' => 5, 'cols' => 10 } %>

    <%= f.input :created_at, readonly: true, html5: true, input_html: { class: "form-control mb-3" } %>

    <%= f.input :updated_at, readonly: true, html5: true, input_html: { class: "form-control mb-3" } %>

  </div>

  <div class="form-actions d-flex justify-content-end ">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
