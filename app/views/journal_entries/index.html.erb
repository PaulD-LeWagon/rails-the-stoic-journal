<div class="d-flex justify-content-center align-items-start min-vh-100">

  <div class="col-md-10 p-3">

    <% img_url = current_user.admin? ? current_user.image_url : @journal_entries.first.user.image_url %>

    <%= image_tag img_url, class: "rounded-circle my-2" %>

    <div class="header d-flex justify-content-between align-items-center">

      <h1 class="my-5 mb-3 fst-bold">All Journal Entries</h1>

      <%= link_to new_journal_entry_path, class: "btn bg-quinary btn-lg", title: "Add a new journal entry?" do %>
        <i class="fa-solid fa-square-plus"></i>
      <% end %>

    </div>

    <hr>

    <% @journal_entries.each do |journal_entry| %>

      <h2><%= journal_entry.title %><h2>



      <p class="bd-font"><%= journal_entry.entry %></p>

      <div class="links d-flex justify-content-end align-items-center">

        <%= render 'links', journal_entry: journal_entry %>

      </div>

      <hr>

      <div class="categories">

        <% if journal_entry.categories.count > 0 %>

          <% journal_entry.categories.each do |category| %>

            <h4>#<%= category.category %><h4>

            <%# <%= render 'categories/links', category: category %>

            <hr>

          <% end %>

        <% end %>

      </div>

      <hr>

    <% end %>

  </div>

</div>
