<div class="d-flex justify-content-center align-items-start min-vh-100">

  <div class="col-md-10 p-3">

    <h1 class="my-5 mb-3 fst-bold">All Journal Entries</h1>

    <hr>

    <% @journal_entries.each do |journal_entry| %>

      <h3>T<%= journal_entry.title %><h3>

      <p class="bd-font"><%= journal_entry.entry %></p>

        <hr>

        <div class="categories">

          <% if journal_entry.categories.count > 0 %>

            <% journal_entry.categories.each do |category| %>

              <h4>#<%= category.category %><h4>

              <%# <%= render 'categories/links', category: category %>

              <hr>

            <% end %>

          <% end %>

        </div>

      <%= render 'links', journal_entry: journal_entry %>

      <hr>

    <% end %>

  </div>

</div>
