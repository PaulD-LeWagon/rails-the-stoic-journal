<%= link_to :back, class: "btn btn-success m-1", title: "Back button" do %>
  <i class="fa-solid fa-angle-left"></i>
<% end %>

<% if action_name != "index" %>
  <%= link_to journal_entries_path, class: "btn btn-secondary m-1", title: "Back to all journal entries" do %>
    <i class="fa-solid fa-list-check"></i>
  <% end %>
<% end %>

<% if journal_entry.persisted? %>

  <%# <%= link_to "Create a category", new_category_path(journal_entry), class: "btn btn-primary m-1" %>
  <%# <%= link_to new_task_sub_task_path(task), class: "btn btn-primary m-1", title: "Add a task?" do %>
    <%# <i class="fa-solid fa-square-plus"></i> %>
  <%# <% end %>

  <% if policy(journal_entry).edit? %>

    <%= link_to edit_journal_entry_path(journal_entry), class: "btn btn-warning m-1", title: "Edit this log" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>

  <% end %>

  <% if policy(journal_entry).destroy? %>
    <%= link_to  journal_entry_path(journal_entry), class: "btn btn-danger m-1", title: "Delete this log?", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  <% end %>

<% end %>
