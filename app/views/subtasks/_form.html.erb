<%= simple_form_for([task, subtask],
  html: {
    id: "#{ dom_id subtask }",
    class: "subtask subtask-form m-3 p-2",
    data: {
      controller: "cards"
    }
  }) do |f| %>

      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

       <%# :title, :description, :task_type, :routine, :order, :comment, :start_date, :due_date, :completed, :active %>

      <div class="form-inputs">

        <%= f.input :order, input_html: { id: "#{ dom_id subtask }_order", class: "form-control mb-3" } %>

        <%= f.input :title, input_html: { class: "form-control mb-3" } %>

        <%= f.input :description, as: :text, input_html: { class: "form-control mb-3", 'rows' => 3, 'cols' => 10 } %>

        <%#= f.input :comment, as: :text, input_html: { hidden: true, class: "form-control mb-3", 'rows' => 3, 'cols' => 10 } %>

        <%#= f.input :start_date, html5: true, input_html: { class: "form-control mb-3" } %>

        <%#= f.input :due_date, html5: true, input_html: { class: "form-control mb-3" } %>

        <%= f.input :completed, as: :boolean, input_html: { id: "#{dom_id subtask}_completed", class: "form-control mb-3" } %>

      </div>

      <div class="form-actions links d-flex justify-content-end align-items-center">

        <%= button_tag type: 'submit', class: "btn btn-primary" do %>

          <%# <i class="fa-solid fa-thumbs-up"></i> %>

          <i class="fa-solid fa-circle-check"></i> Add Subtask

        <% end %>

      </div>

    <% end %>
