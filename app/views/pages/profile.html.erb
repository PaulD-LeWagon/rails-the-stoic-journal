
  <div class="row align-items-center my-5">
    <!-- Profile Picture -->
    <div class="col-md-3 text-center">
      <img class="rounded-circle img-fluid" src="<%= current_user.image_url %>" alt="<%= current_user.full_name %>'s profile picture">
    </div>

    <!-- User Info: Name, Email, Bio -->
    <div class="col-md-9">
      <h1><%= current_user.full_name %></h1>
      <h4><%= current_user.email %></h4>
      <p class="mt-3"><%= current_user.bio %></p>
    </div>
  </div>

  <hr>
